<% include ../partials/header %>

<div class="container">
    
    <div class="row">
    
        <h1 style="text-align: center;">Create A New Campground</h1>
        
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Event Name" autofocus required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="url" name="image" required placeholder="Event Image Url" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="description" placeholder="Event Description" rows="10" col="10"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
            </form>

            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>