<% include ../partials/header %>

<div class="container">
    
    <div class="row">
    
        <h1 style="text-align: center;">Edit <%= campground.name %></h1>
        
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>" autofocus required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="url" name="campground[image]" value="<%= campground.image %>" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="campground[description]" value="<%= campground.description %>" rows="10" col="10"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
            </form>

            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>